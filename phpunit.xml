<?xml version="1.0" encoding="UTF-8"?>

<phpunit colors="true" stopOnFailure="false">
	<php>
		<server name="doc_root" value="public"/>
		<server name="app_path" value="app"/>
	</php>
	<testsuites>
		<testsuite name="modules">
			<directory suffix=".php">tests</directory>
		</testsuite>
	</testsuites>
	<logging>
   <log type="testdox-text" target="./tests/logs/testdox.txt"/>
</logging>
</phpunit>
