{% extends 'main.html.twig' %}

{% block title %}
    Bookings for {{ customer.firstName }} {{ customer.lastName }}
{% endblock %}

{% block content %}
    <div>
        <a href="/booking/create">Create New Booking</a>
    </div>
    <br />

    {% if bookings is empty %}
        No bookings
    {% else %}
        <table>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Reference</th>
            </tr>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.bookingDate | date('d/m/Y') }}</td>
                    <td>{{ booking.bookingReference }}</td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}