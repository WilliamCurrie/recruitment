{% extends 'main.html.twig' %}

{% block title %}
    All Customers
{% endblock %}

{% block content %}
<table id="allCustomers" class="display">
    <thead>
        <tr>
            <th>First name</th>
            <th>Surname</th>
            <th>Address</th>
            <th>Bookings</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.address }}</td>
                <td><a href="/bookings/customer/{{ customer.id }}">View Bookings</a></td>
                <td><a href="customer/{{ customer.id }}">View Customer</a> </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block javascript %}
$(document).ready( function () {
    $('#allCustomers').DataTable();
} );
{% endblock %}