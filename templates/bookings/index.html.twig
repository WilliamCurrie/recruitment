{% extends 'base.html.twig' %}

{% block body %}

    <h1>All Bookings</h1>

    <table cellpadding="10" border="1">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Twitter</th>
                <th>Reference</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>
                    <a href="{{ path('customer_bookings', { customer: booking.customer.id }) }}">{{ booking.customer }}</a>
                </td>
                <td>{{ booking.customer.twitterAlias }}</td>
                <td>{{ booking.reference }}</td>
                <td>{{ booking.date|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">You have no bookings.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
